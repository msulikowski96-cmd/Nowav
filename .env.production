
# Production Environment Variables Template
# Copy to .env and fill with real values

# === REQUIRED - AI API ===
OPENROUTER_API_KEY=your-openrouter-api-key-here

# === REQUIRED - STRIPE PAYMENTS ===
# Use production keys for live deployment
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key

# === SECURITY ===
SECRET_KEY=generate-strong-secret-key-64-chars-long
SESSION_SECRET=generate-strong-session-secret-64-chars-long
ENCRYPTION_KEY=generate-base64-encryption-key

# === DATABASE ===
# Your real Neon PostgreSQL connection string for production
# Example: postgresql://user:pass@ep-abc123.us-east-1.aws.neon.tech/dbname
DATABASE_URL=postgresql://username:password@hostname.neon.tech/database_name

# === FLASK SETTINGS ===
FLASK_ENV=production
FLASK_APP=app.py
PORT=5000
DEBUG=false

# === SECURITY HEADERS ===
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30

# === FILE UPLOAD ===
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/tmp/cv_uploads
